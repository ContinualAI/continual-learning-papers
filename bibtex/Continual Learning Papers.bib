@article{french1997,
  title = {Pseudo-Recurrent {{Connectionist Networks}}: {{An Approach}} to the '{{Sensitivity}}-{{Stability}}' {{Dilemma}}},
  shorttitle = {Pseudo-Recurrent {{Connectionist Networks}}},
  author = {French, Robert},
  year = {1997},
  volume = {9},
  pages = {353--380},
